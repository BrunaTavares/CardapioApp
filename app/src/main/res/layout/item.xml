<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/imagemItem1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:src="@null" />

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:layout_toRightOf="@+id/imagemItem1"
        android:id="@+id/nomeItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp" />

    <TextView
    android:textColor="@color/colorPrimarytext"
    android:layout_below="@+id/nomeItem1"
    android:layout_alignRight="@+id/imagemItem1"
    android:id="@+id/precoItem1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:textSize="12sp" />

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:layout_below="@+id/precoItem1"
        android:layout_alignLeft="@+id/imagemItem1"
        android:id="@+id/descricaoItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp" />

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/imagemItem1"
        android:layout_below="@+id/descricaoItem1"
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

</RelativeLayout>
